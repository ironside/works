@{
    Layout = null;
    var imgUsuarioGrupo = "";
}


<div class="col-md-12">
    <h4> @(Model.Count > 0 ? Model.Count + " Comentários" : "Seja o primeiro a comentar esse tópico") </h4>
</div>

<hr/>

@foreach (var item in Model)
{

    imgUsuarioGrupo = (@item.UsuarioId != null ? @item.UsuarioId.ToString() + ".jpg" : "");

    <div class="col-xs-12 col-md-12" id="postComentarioTopico-@item.Id">
        <div class="panel panel-default comentario">
            <div class="panel-heading">
                <div class="media">
                    <div class="media-left">
                        <a id="profilePopup_1633126" title="" tabindex="0" class="pop avatar img-circle" role="button" data-toggle="popover" data-trigger="hover" data-html="true" data-placement="right">
                            <img src="/Mercado/Images/Perfil/@imgUsuarioGrupo" class="img-responsive user-photo" alt="">
                        </a>
                    </div>
                    <div class="media-body">

                        <a class="profileLink pop" href="/Mercado/Perfil.aspx?ID=112249" data-original-title="" title="">@item.NomeUsuario</a>
                        <br>
                        <small class="text-muted">em @item.DataComentario.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>
                </div>
            </div>
            <div class="panel-body" style="background-color: #FFFFFF;">
                <div class="row">
                    <div class="col-xs-12 col-md-12">
                        <div class="fr-view">
                            <div id="comentarioTopico-@item.Id">
                                @Html.Raw(@item.Comentario)
                            </div>
                        </div>
                    </div>
                </div>


                @if (item.UsuarioId == item.UsuarioLogadoId){
                    <div class="row">
                        <div class="col-xs-12 col-md-12">
                            <div class="btn-group pull-right" role="group" aria-label="...">
                                <a id="@item.Id" href="#" class="btn btn-default editarComentarioTopico-@item.Id comentarioTopico" onclick="abrirEditorComentarioTopico('@item.Id')">  <i class="fa fa-edit"> </i> Editar</a>
                                <a id="@item.Id" href="#" class="btn btn-default salvarComentarioTopico-@item.Id comentarioTopico salvarComentarioTopico" onclick="salvarComentarioTopico('@item.Id', '@item.Topico_GrupoTrabalhoId')"> <i class="fa fa-check-circle"> </i> Salvar</a>
                                <a id="@item.Id" href="#" class="btn btn-default excluirComentarioTopico-@item.Id comentarioTopico" onclick="excluirComentarioTopico('@item.Id', '@item.Topico_GrupoTrabalhoId')">  <i class="fa fa-trash"> </i> Excluir</a>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
}

<script type="text/javascript" src="/Js/Works/site.ComentarioTopicoGrupoTrabalho.js"></script>