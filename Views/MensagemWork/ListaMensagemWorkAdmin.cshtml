@{
    Layout = null;
}


<style>
    #scrolltable {
        margin-top: 5px;
        height: 320px;
        overflow: auto;
    }
</style>

<div class="row" style="margin-bottom:50px">

    <div class="col-xs-12 col-md-12">
        <h4> @(Model.Count == 0 ? "Nenhuma mensagem na sua caixa" : "") </h4>
    </div>


    @if (Model.Count > 0)
    {
        <div class="col-xs-12 col-md-12">
            <div id="scrolltable">
                <table id="mytable" class="table table-striped table-condensed">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td width="40%">
                                    <div class="col-xs-12 col-md-12" style="padding:0px;">
                                        <div class="media-left">
                                            <a id="profilePopup_1633126" title="" tabindex="0" class="pop avatar img-circle" style="float: left;">
                                                <img src="/Mercado/Images/Perfil/@(item.UsuarioRemetenteId).jpg" class="img-responsive user-photo">
                                            </a>
                                        </div>
                                        <div class="media-body">
                                            <a class="profileLink pop " href="/Mercado/Perfil.aspx?ID=@(item.UsuarioRemetenteId)" data-original-title="" title="">@item.NomeUsuarioRemetenteId</a>
                                            <br>
                                            <small class="text-muted data-topico"> em @item.DataMensagem.ToString("dd/MM/yyyy HH:mm")</small>
                                        </div>
                                    </div>
                                </td>
                                <td width="60%">
                                    <div class="col-xs-12 col-md-12" style="padding:0px;">
                                        <p>@item.DescricaoMensagemWork</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="clearfix"></div>
        </div>
    }

</div>




<script type="text/javascript" src="/Js/Works/site.MensagemWork.js"></script>